@model AnnouncementsDisplayModel

<h2>Announcements</h2>

<a asp-action="Create" asp-controller="Announcement" class="btn btn-primary">Create new</a>

@if (Model?.List?.Count() > 0)
{
    <table class="table table-striped my-2">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Created Date</th>
            <th>Updated Date</th>
            <th>Category</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model.List)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.CreatedDate</td>
                <td>@item.UpdatedDate</td>
                <td>@item.Category</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Update" asp-controller="Announcement" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <a asp-action="Delete" asp-controller="Announcement" asp-route-id="@item.Id" class="btn btn-outline-danger" onclick="return window.confirm('Are you sure ?')">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h3>No records</h3>
}

