@model AnnouncementsDisplayModel
@{
}

<h2>Announcements</h2>

<div class="w-100 mt-4 d-flex flex-wrap">
    @foreach (var item in Model.List)
    {
        <div class="card mx-2 mb-4" style="width: 11rem;">
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">
                    <b>Category: @item.Category</b>
                    <b>Description: @item.Description</b>
                    @* <br /><b>@book.Quantity</b> *@
                </p>
            </div>
        </div>
    }
    @if (Model?.List?.Count == 0)
    {
        <h3>There are no announcements!</h3>
    }
</div>